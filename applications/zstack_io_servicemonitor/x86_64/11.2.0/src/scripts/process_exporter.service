[Unit]
Description=prometheus zstack_service_exporter
After=network.target

[Service]
Environment="GOMAXPROCS=1"
ExecStart=/var/lib/zstack/zsservice/process-exporter  -config.path=/var/lib/zstack/zsservice/process-config.yaml
ExecStop=/bin/sh -c 'pkill -TERM -f /var/lib/zstack/zsservice/process-exporter'
StandardOutput=file:/var/lib/zstack/zsservice/process-exporter.log
StandardError=file:/var/lib/zstack/zsservice/process-exporter.log

MemoryLimit=1G

Restart=always
RestartSec=30s
[Install]
WantedBy=multi-user.target